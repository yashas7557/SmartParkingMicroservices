# Use lightweight Java 17 image
FROM eclipse-temurin:17-jre-alpine

# Set working directory
WORKDIR /app

# Copy jar file
ARG JAR_FILE=target/*.jar
COPY ${JAR_FILE} app.jar

# Expose service port
EXPOSE 8080

# Run the application
ENTRYPOINT ["java","-jar","app.jar","--spring.profiles.active=docker"]

